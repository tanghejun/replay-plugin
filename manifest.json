{
    "manifest_version": 2,
    "name": "replay",
    "description": "This extension replays",
    "version": "1.0",

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "page_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Replay"
    },

    "content_scripts": [{
        "matches": ["*://*/*replay_session_id=*"],
        "js": ["engine.js", "content.js"]
    }],

    "permissions": [
        "tabs",
        "activeTab",
        "http://d.admx.baixing.com:8885/"
    ]
}
